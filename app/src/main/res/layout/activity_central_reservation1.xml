<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CentralReservation1">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="จองส่วนกลาง"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="date"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txCentral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/time8am_9am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="08:00-09:00 น." />

            <CheckBox
                android:id="@+id/time9am_10am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="09:00-10:00 น." />

            <CheckBox
                android:id="@+id/time10am_11am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="10:00-11:00 น." />

            <CheckBox
                android:id="@+id/time11am_12am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="11:00-12:00 น." />

            <CheckBox
                android:id="@+id/time12am_13am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="12:00-13:00 น." />

            <CheckBox
                android:id="@+id/time13am_14am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="13:00-14:00 น." />

            <CheckBox
                android:id="@+id/time14am_15am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="14:00-15:00 น." />

            <CheckBox
                android:id="@+id/time15am_16am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="15:00-16:00 น." />

            <CheckBox
                android:id="@+id/time16am_17am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="16:00-17:00 น." />

            <CheckBox
                android:id="@+id/time17am_18am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="17:00-18:00 น." />

            <CheckBox
                android:id="@+id/time18am_19am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="18:00-19:00 น." />

            <CheckBox
                android:id="@+id/time19am_20am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_rad5_stroke"
                android:buttonTint="@color/blue"
                android:text="19:00 - 20:00 น." />
        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/bg_menu"
        android:backgroundTint="#323E4D"
        android:text="ต่อไป"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>